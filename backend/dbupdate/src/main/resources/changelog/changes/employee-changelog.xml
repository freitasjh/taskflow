<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

<changeSet id="30052025-J1" author="Joao">
    <createTable tableName="employee">
        <column autoIncrement="true" name="id" type="BIGINT">
            <constraints primaryKey="true"/>
        </column>
        <column name="name" type="varchar(255)" />
        <column name="email" type="varchar(255)">
            <constraints nullable="false" unique="true" uniqueConstraintName="unique_employee_email"/>
        </column>
        <column name="phone" type="varchar(20)"/>
        <column name="federal_id" type="varchar(14)">
            <constraints nullable="false" unique="true" uniqueConstraintName="unique_employee_federal_id"/>
        </column>
        <column name="cellphone" type="varchar(255) "/>
        <column name="date_created" type="timestamp" />
        <column name="date_updated" type="timestamp" />
        <column name="department" type="VARCHAR(10)" >
            <constraints nullable="false" />
        </column>
        <column name="user_id" type="BIGINT">
            <constraints nullable="false"/>
        </column>
    </createTable>
</changeSet>
</databaseChangeLog>