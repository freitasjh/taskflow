    <changeSet id="permission-27072025J-4" author="Joao" runOnChange="true">
        <sql>
            INSERT INTO profile_permission (profile_id, permission_id)
            SELECT p.id, perm.id FROM profile p, permission perm
            WHERE p.name = 'DEV' AND perm.module = 'EMPLOYEE';
